extends ./components/layout

block content
    main
        header.page-header.page-header-compact.page-header-light.border-bottom.bg-white.mb-4
            .container-fluid
                .page-header-content
                    .row.align-items-center.justify-content-between.pt-3
                        .col-auto.mb-3
                            h1.page-header-title
                                .page-header-icon
                                    i(data-feather='settings')
                                | SUBO settings
        // Main page content
        .container.mt-4
            .row
                .col-xl-4
                    .form-group
                        select#inputNamespace.form-control
                            option(selected=true) Billing SUBO
                            option(selected=false) Admin SUBO
            div.mt-0.mb-4

            nav.nav.nav-borders
                a.nav-link.active.ml-0(href='subo-settings.html') General
                a.nav-link(href='subo-settings-backend.html') Backend
                a.nav-link(href='subo-settings-frontend.html') Frontend
                a.nav-link(href='subo-settings-middleware.html') Middleware

            hr.mt-0.mb-4

            .row
                .col-xl-8
                    // Account details card
                    .card.mb-4
                        // .card-header Service details
                        .card-body
                            form
                                .form-group
                                    label.small.mb-1 Limit repo creation per user (daily)
                                    input.form-control(type='number' value=10 min=1 max=50)
                                .form-group.mb-0
                                    label.small.mb-1 Choose allowed to create service types
                                    .custom-control.custom-checkbox
                                        input#checkBackendOption.custom-control-input(type='checkbox' checked='')
                                        label.custom-control-label(for='checkBackendOption') backend
                                    .custom-control.custom-checkbox
                                        input#checkFrontendOption.custom-control-input(type='checkbox' checked='')
                                        label.custom-control-label(for='checkFrontendOption') frontend
                                    .custom-control.custom-checkbox
                                        input#checkMiddlewareOption.custom-control-input(type='checkbox' checked='')
                                        label.custom-control-label(for='checkMiddlewareOption') middleware

                                hr.my-4
                                .d-flex.justify-content-between
                                    a.btn.btn-primary(href='#') Update info
